<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="WsPageIndicatorViewStyle">
        <item name="wsPageIndicatorDotSpacing">7.8dp</item>
        <item name="wsPageIndicatorDotRadius">2.1dp</item>
        <item name="wsPageIndicatorDotRadiusSelected">3.1dp</item>
        <item name="wsPageIndicatorDotColor">?android:attr/colorForeground</item>
        <item name="wsPageIndicatorDotColorSelected">?android:attr/colorForeground</item>
        <item name="wsPageIndicatorDotFadeOutDelay">1000</item>
        <item name="wsPageIndicatorDotFadeOutDuration">250</item>
        <item name="wsPageIndicatorDotFadeInDuration">100</item>
        <item name="wsPageIndicatorDotFadeWhenIdle">true</item>
        <item name="wsPageIndicatorDotShadowColor">#66000000</item>
        <item name="wsPageIndicatorDotShadowRadius">1dp</item>
        <item name="wsPageIndicatorDotShadowDx">0.5dp</item>
        <item name="wsPageIndicatorDotShadowDy">0.5dp</item>
    </style>

    <style name="Material3CardView" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerHigh</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">3dp</item>
    </style>
    <style name="Material3Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="Material3Button.Icon" parent="Widget.Material3.Button.Icon">
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Preference Theme -->
    <style name="PreferenceThemeOverlay.Material3">
        <item name="preferenceCategoryTitleTextAppearance">@style/TextAppearance.Preference.CategoryTitle.Material3</item>
        <item name="preferenceCategoryTitleTextColor">?colorPrimary</item>
        <item name="preferenceStyle">@style/Preference.Material3</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category.Material3</item>
        <item name="preferenceInformationStyle">@style/Preference.Information.Material3</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Material3</item>
        <item name="materialSwitchPreferenceStyle">@style/Preference.MaterialSwitchPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.EditTextPreference.Material3</item>
    </style>
    <style name="TextAppearance.Preference.Title.Material3" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textAppearance">?attr/preferenceCategoryTitleTextAppearance</item>
        <item name="android:textColor">?attr/preferenceCategoryTitleTextColor</item>
    </style>
    <style name="TextAppearance.Preference.CategoryTitle.Material3"
        parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Preference.Material3" parent="Preference.Material">
        <item name="android:layout">@layout/item_setting</item>
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerBelow">false</item>
        <item name="allowDividerAbove">false</item>
    </style>
    <style name="Preference.SwitchPreferenceCompat.Material3" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:layout">@layout/item_setting</item>
        <item name="widgetLayout">@layout/widget_switch</item>
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerBelow">false</item>
        <item name="allowDividerAbove">false</item>
    </style>
    <style name="Preference.MaterialSwitchPreference" parent="Preference.SwitchPreferenceCompat.Material3">
    </style>
    <style name="Preference.EditTextPreference.Material3" parent="Preference.DialogPreference.EditTextPreference.Material">
        <item name="android:layout">@layout/item_setting</item>
        <item name="allowDividerBelow">false</item>
        <item name="allowDividerAbove">false</item>
    </style>
    <style name="Preference.Category.Material3" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/item_setting_category</item>
        <item name="iconSpaceReserved">true</item>
        <item name="allowDividerBelow">false</item>
        <item name="allowDividerAbove">false</item>
    </style>
    <style name="Preference.Information.Material3" parent="@style/Preference.Information">
        <item name="android:layout">@layout/item_setting</item>
        <item name="enabled">false</item>
        <item name="shouldDisableView">false</item>
    </style>

    <style name="MaterialAlertDialog.Material3.Animation.App">
        <item name="android:windowEnterAnimation">@anim/m3_enter</item>
        <item name="android:windowExitAnimation">@anim/m3_exit</item>
    </style>
    <style name="MaterialAlertDialog.Material3.FullScreen" parent="MaterialAlertDialog.Material3">
        <item name="android:layout">@layout/layout_m3_dialog_fullscreen</item>
        <item name="dialogPreferredPadding">3dp</item>
    </style>
    <style name="Widget.Material3.Button.TextButton.Dialog.FullScreen" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetTop">2dp</item>
    </style>

</resources>
