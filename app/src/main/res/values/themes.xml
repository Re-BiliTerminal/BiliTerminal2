<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BiliTerminal2.Material3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSwipeToDismiss" tools:ignore="NewApi">true</item>

        <item name="materialCardViewStyle">@style/Material3CardView</item>
        <item name="materialButtonStyle">@style/Material3Button</item>
        <item name="android:textSize">14sp</item>

        <item name="android:listPreferredItemPaddingLeft">12dp</item>
        <item name="android:listPreferredItemPaddingStart">12dp</item>
        <item name="android:listPreferredItemPaddingRight">12dp</item>
        <item name="android:listPreferredItemPaddingEnd">12dp</item>

        <item name="colorBackgroundFloating">?colorSurfaceContainerHigh</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material3</item>
    </style>

    <style name="Theme.BiliTerminal2.Material3.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:colorBackground">?attr/colorSurfaceContainerHigh</item>
        <item name="listLayout">@layout/dialog_select_material</item>
    </style>

    <style name="Theme.BiliTerminal2.Material3.AlertDialog.FullScreen" parent="Theme.BiliTerminal2.Material3.AlertDialog">
        <item name="android:colorBackground">?attr/colorSurfaceContainerHigh</item>

        <item name="alertDialogStyle">@style/MaterialAlertDialog.Material3.FullScreen</item>
        <item name="buttonBarButtonStyle">@style/Widget.Material3.Button.TextButton.Dialog.FullScreen</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:listDivider">@null</item>
    </style>

    <style name="Theme.BiliTerminal2.Splash" parent="Theme.BiliTerminal2.Material3">
        <item name="android:windowBackground">@drawable/splash_text</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Theme.BiliTerminal2.Player" parent="Theme.BiliTerminal2.Material3">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowSwipeToDismiss" tools:ignore="NewApi">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>